{
    "name": "terminal-creator",
	"displayName": "TerminalCreator",
	"description": "用于自动创建多个Terminal，并在各Terminal中执行相应命令",
	"version": "0.0.4",
	"publisher": "MangoChow",
	"icon": "assets/logo.jpg",
	"engines": {
		"vscode": "^1.67.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:myext.createterminals"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "myext.createterminals",
				"title": "Create Terminals"
			}
		],
		"configuration": [
			{
				"id": "TerminalCreator",
				"title": "配置创建多个Ternimal",
				"order": 1,
				"properties": {
					"conf.settingEditor.cmd": {
						"type": "array",
						"description": "多个terminal配置",
						"items": {
							"type": "array",
							"items": {
								"type": "string"
							}
						}
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.67.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"eslint": "^8.14.0",
		"glob": "^8.0.1",
		"mocha": "^9.2.2",
		"typescript": "^4.6.4",
		"@vscode/test-electron": "^2.1.3"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/xption/TerminalCreator.git"
	},
	"homepage": "https://github.com/xption/TerminalCreator/blob/main/README.md"
}
